<TodasVendas_Page>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        
        # p√°gina
        Label:
            pos_hint:{"right":0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Tela Todas Vendas"

        # barra inferior
        FloatLayout:
            pos_hint:{"right":1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            # voltar Tela
            ImageButton:
                pos_hint:{"right":0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustes_page")