<Home_Page>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        
        # Total Vendas do Vendedor
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"
            pos_hint:{"right":0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Total de Vendas: R$1,00"
            id: label_total_vendas
            markup: True
        
        # Listagem de Vendas
        ScrollView:
            pos_hint:{"right":1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # barra inferior
        GridLayout:
            pos_hint:{"right":1, "top": 0.12}
            size_hint: 1, 0.12
            rows: 1

            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            # Botão 1 - Adicionar Venda
            ImageButton:
                source: "icones/add.png"
                on_release: app.mudar_tela("adicionar_venda_page")

            # Botão 2 - Listagem de Vendedores
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.mudar_tela("lista_vendedores_page")

            # Botão 3 - Página Ajustes
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustes_page")