<Ajustes_Page>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        
        # id do vendedor
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"
            pos_hint:{"right":0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Seu ID Ãšnico: 1"
            id: label_id_vendedor

        # mudar foto de perfil
        ImageButton:
            pos_hint: {"right":0.5 ,"top":0.75}
            size_hint: 0.5, 0.15
            source: "icones/foto_perfil.png"
            on_release: print("app.mudar_tela(mudar_foto_perfil)")
        LabelButton:
            pos_hint: {"right":0.9 ,"top":0.75}
            size_hint: 0.5, 0.15
            text: "Mudar Foto de Perfil"
            on_release: print("app.mudar_tela(mudar_foto_perfil)")

        # adicionar vendedor
        ImageButton:
            pos_hint: {"right":0.5 ,"top":0.55}
            size_hint: 0.5, 0.15
            source: "icones/adicionar_vendedor.png"
            on_release: print("app.mudar_tela(acompanhar_vendedor)")
        LabelButton:
            pos_hint: {"right":0.9 ,"top":0.55}
            size_hint: 0.5, 0.15
            text: "Acompanhar Vendedor"
            on_release: print("app.mudar_tela(acompanhar_vendedor)")

        # ver todas as vendas
        ImageButton:
            pos_hint: {"right":0.5 ,"top":0.35}
            size_hint: 0.5, 0.15
            source: "icones/vendas_empresa.png"
            on_release: print("app.mudar_tela(todas_vendas)")
        LabelButton:
            pos_hint: {"right":0.9 ,"top":0.35}
            size_hint: 0.5, 0.15
            text: "Ver Todas as Vendas"
            on_release: print("app.mudar_tela(todas_vendas)")

        # barra inferior
        FloatLayout:
            pos_hint:{"right":1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            # voltar Tela
            ImageButton:
                pos_hint:{"right":0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("home_page")